			audiopathSecret ="Assets/Audio/Fx/sfx_secret.wav"
			audiopathCd ="Assets/Audio/Fx/sfx_Attack_Up.wav"
			audiopathHealth="Assets/Audio/Fx/sfx_health.wav"
			audiopathPortal="Assets/Audio/Fx/sfx_portal.wav"/>
		
	<npc name="GUIA" dialogueID="1"
