<config>
	<app>
		<title>Twisted Tent</title>
		<organization>UPC</organization>
		<frcap value = "16"/>
	</app>

	<renderer>
		<vsync value="false"/>
		<camera x="0" y="0"/>
	</renderer>

	<window>
		<resolution width="1280" height="720" scale="1"/>
		<fullscreen value="false"/>
		<borderless value="false"/>
		<resizable value="false"/>
		<fullscreen_window value="false"/>
	</window>

	<audio>
		<general volume="128"/>
		<music volume="128"/>
		<fx volume="128"/>
	</audio>

	<fadeToBlack>
	</fadeToBlack>

	<logoScene background="Assets/Maps/logo_bg.png" audioLogoPath ="Assets/Audio/Music/music_logo.ogg"/>
